generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model client {
  id        String    @id @default(uuid())
  name      String
  cpf       String
  birthdate String
  phone     String?
  email     String    @unique
  password  String
  product   product[]
}

model product {
  id       String  @id @default(uuid())
  name     String
  amount   Int
  image    String?
  value    Int
  client   client  @relation(fields: [clientId], references: [id])
  clientId String
}
